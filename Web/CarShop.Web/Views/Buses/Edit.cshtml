@using CarShop.Web.ViewModels.Buses
@using CarShop.Data.Models.Vehicles
@using CarShop.Data.Models.Vehicles.Enums.Cars
@using CarShop.Data.Models.Vehicles.Enums.Vehicle
@using CarShop.Data.Models.Vehicles.Enums
@model EditBusViewModel

@{
    var message = "Fields in <span class=\"text-danger font-weight-bold\">RED</span> are required.";
}

<h1 class="text-center font-weight-bold m-4">Welcome to edit bus page.</h1>
<hr class="bg-dark w-50 mx-auto" style="height: 3px" />
<div class="w-50 text-center mx-auto alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    @Html.Raw(message)
</div>
<div class="container-fluid">
    <form method="post" asp-controller="Buses" asp-action="Edit" class="row d-flex justify-content-between mt-5 w-75 mx-auto text-center">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="ownerId" value="@Model.OwnerId" />
        <div class="form-group col-3 m-1">
            <label asp-for="Brand" class="text-danger"></label>
            <input asp-for="Brand" placeholder="Brand..." class="form-control" />
            <span asp-validation-for="Brand"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Model" class="text-danger"></label>
            <input asp-for="Model" placeholder="Model..." class="form-control" />
            <span asp-validation-for="Model"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="EngineType" class="text-danger"></label>
            <select asp-for="EngineType" asp-items="Html.GetEnumSelectList<EngineType>()" class="form-control">
                <option selected="selected" disabled>Select engine type</option>
            </select>
            <span asp-validation-for="EngineType"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="State" class="text-danger"></label>
            <select asp-for="State" asp-items="Html.GetEnumSelectList<VehicleState>()" class="form-control">
                <option selected="selected">All</option>
            </select>
            <span asp-validation-for="State"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Power" class="text-danger"></label>
            <input asp-for="Power" placeholder="Power in horse power..." class="form-control" />
            <span asp-validation-for="Power"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Transmission" class="text-danger"></label>
            <select asp-for="Transmission" asp-items="Html.GetEnumSelectList<TransmissionType>()" class="form-control">
                <option selected="selected">All</option>
            </select>
            <span asp-validation-for="Transmission"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Price" class="text-danger"></label>
            <input asp-for="Price" placeholder="Price..." class="form-control" />
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Currency" class="text-danger"></label>
            <select asp-for="Currency" asp-items="Html.GetEnumSelectList<CurrencyType>()" class="form-control">
                <option selected="selected" disabled>Select currency</option>
            </select>
            <span asp-validation-for="Currency"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Run" class="text-danger"></label>
            <input asp-for="Run" placeholder="Run in kilometers..." class="form-control" />
            <span asp-validation-for="Run"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Month" class="text-danger"></label>
            <select asp-for="Month" asp-items="Html.GetEnumSelectList<Months>()" class="form-control">
                <option selected="selected" disabled>Select month</option>
            </select>
            <span asp-validation-for="Month"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Year" class="text-danger"></label>
            <select asp-for="Year" class="form-control">
                <option selected="selected" disabled>Select year</option>
                @for (int i = 1930; i <= DateTime.Now.Year; i++)
                {
                    if (i == Model.Year)
                    {
                        <option selected value="@i">@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }

                }
            </select>
            <span asp-validation-for="Year"></span>
        </div>
        <div class="form-group col-3 m-1">
            <label asp-for="Color" class="text-danger"></label>
            <input asp-for="Color" placeholder="Color..." class="form-control" />
            <span asp-validation-for="Color"></span>
        </div>
        <div class="form-group col-5 m-1 mx-auto">
            <label asp-for="SeatsCount" class="text-danger"></label>
            <input asp-for="SeatsCount" placeholder="Seats Count..." class="form-control" />
            <span asp-validation-for="SeatsCount"></span>
        </div>
        <hr class="bg-dark mx-auto w-100" style="height: 2px" />
        <hr class="bg-dark mx-auto w-100" style="height: 2px" />
        <div class="d-flex justify-content-center col-12 row mt-5">
            <button type="submit" class="btn btn-dark text-white col-6">Edit bus</button>
        </div>
    </form>
</div>