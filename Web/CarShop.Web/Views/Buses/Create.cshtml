<partial name="Partials/_MainCategoryCreateVehiclePartial" />

<style>
    #fUpload {
        display: none;
    }

    #fUpload-label {
        margin-left: 10px;
        margin-top: 10px;
        cursor: pointer;
        height: 100px;
        width: 100px;
        border: 5px solid;
    }

    #icon-upload {
        position: relative;
        top: 10%;
        left: 15%;
    }
</style>

<form method="post" enctype="multipart/form-data" asp-controller="Cars" asp-action="Img" id="upload-form">
    <div id="upload-div">
        <label for="fUpload" id="fUpload-label"><i id="icon-upload" class="fa fa-plus fa-5x"></i></label>
        <input type="file" id="fUpload" name="files" multiple class="form-control" />
    </div>
</form>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(() => {
        $("#fUpload").change(() => {
            $("#upload-form").submit();
        })
    })
</script>