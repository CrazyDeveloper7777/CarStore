@using CarShop.Web.ViewModels.Users
@model ConfirmAccountViewModel

<h1 class="display-4 text-center m-5 font-weight-bold">Welcome to confimation page.</h1>
<hr class="bg-dark w-50 mx-auto" style="height: 2px" />
<h4 class="text-center">Please fill out this form to confirm your account.</h4>
<hr class="bg-dark w-50 mx-auto" style="height: 2px" />
<form action="/Users/ConfirmAccount?username=@this.TempData["Username"]" method="post" class="w-50 mx-auto">
    <div class="form-group text-center">
        <label asp-for="Email"></label>
        <div class="input-container">
            <i class="fa fa-envelope  icon"></i>
            <input placeholder="Email..." asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="FirstName"></label>
        <div class="input-container">
            <i class="fa fa-user  icon"></i>
            <input placeholder="FirstName..." asp-for="FirstName" class="form-control" />
        </div>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="LastName"></label>
        <div class="input-container">
            <i class="fa fa-user  icon"></i>
            <input placeholder="LastName..." asp-for="LastName" class="form-control" />
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group d-flex justify-content-center">
        <button type="submit" class="btn bg-dark text-white">Confirm</button>
    </div>
</form>