@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center m-5">@ViewData["Title"]</h1>
<hr class="bg-dark w-50 mx-auto" style="height: 2px" />
<div class="container-fluid mx-auto w-50">
    <div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group text-center">
                <label asp-for="Input.Username"></label>
                <div class="input-container">
                    <i class="fa fa-user icon"></i>
                    <input placeholder="Username..." asp-for="Input.Username" class="form-control" />
                </div>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Input.Email"></label>
                <div class="input-container">
                    <i class="fa fa-envelope icon"></i>
                    <input placeholder="Email..." asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Input.Password"></label>
                <div class="input-container">
                    <i class="fa fa-key icon"></i>
                    <input placeholder="Password..." asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Input.ConfirmPassword"></label>
                <div class="input-container">
                    <i class="fa fa-key icon"></i>
                    <input placeholder="Confirm password..." asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-dark text-white">Register</button>
            </div>
        </form>
    </div>
</div>
